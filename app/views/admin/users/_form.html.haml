= simple_form_for [:admin, user] do |f|
  .h2 New User

  - if user.errors.any?
    - user.errors.full_messages.each do |message|
      .alert.alert-danger{:role => "alert"}
        = message

  = f.input :email
  = f.input :password

  = link_to "Cancel", user, class: 'btn btn-secondary float-start' if user.persisted?
  = link_to "Cancel", admin_users_path, class: 'btn btn-secondary float-start' if !user.persisted?
  = f.submit "Save", class: "btn btn-primary float-end" if user.persisted?
  = f.submit "Create", class: "btn btn-primary float-end" if !user.persisted?