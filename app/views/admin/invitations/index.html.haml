%div.admin.index
  %h1 Invitations
  %div.group-actions
    = link_to "New Invitation", new_admin_invitation_path, class: "btn btn-primary"
  %table.table
    %thead
      %tr
        %th{scope: "col"} Inviter
        %th{scope: "col"} Invitee
        %th{scope: "col"} Token
        %th{scope: "col"} Actions
    %tbody
      - @records.each do |invitation|
        %tr
          %td= invitation.inviter.short_name
          %td= invitation.invitee.short_name
          %td= invitation.token
          %td
            -# = link_to "edit", edit_admin_user_path(user)
