= simple_form_for [:admin, record] do |f|
  - if record.errors.any?
    - record.errors.full_messages.each do |message|
      .alert.alert-danger{:role => "alert"}
        = message

  = f.association :inviter
  = f.association :invitee

  .form-actions
    = link_to "Cancel", admin_invitations_path, class: 'btn btn-secondary float-start'
    = f.submit (record.persisted? ? "Save" : "Create"), class: "btn btn-primary float-end"
